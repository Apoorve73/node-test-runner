{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "no-inner-declarations": "off",
        "no-prototype-builtins": "off"
    },
    "overrides": [
        {
            "files": ["tests/*"],
            "env": {
                "mocha": true
            }
        }
    ]
}
